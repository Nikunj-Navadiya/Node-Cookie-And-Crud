<%- include('header') %>

  <!-- ============================================================== -->
  <!-- Page wrapper  -->
  <!-- ============================================================== -->
  <div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb" style="background-color: rgb(190, 181, 181); padding: 13px;">
      <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
          <h2 class="page-title" style="font-family: 'Courier New', Courier, monospace;">Car Update Form</h2>
          <div class="ms-auto text-end">
            <nav aria-label="breadcrumb">
              <div class="btn btn-primary">
                <a href="/crud" style="color: rgb(253, 252, 252);">View</a>
              </div>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <div class="container-fluid">
      <form method="post" action="/crud/updateRecord" enctype="multipart/form-data">
        <input type="hidden" name="editid" value="<%= single._id %>">
        <div class="d-flex ">
          <div class="col-md-6">
            <div class="form-group col-md-6 mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="tname" name="name" value="<%= single.name %>">
            </div>

            <div class="form-group col-md-5 mb-4">
              <label for="price" class="form-label">Price</label>
              <input type="text" class="form-control" id="price" name="price" value="<%= single.price %>">
            </div>

            <fieldset class="form-group mb-3">
              <div class="row">
                <label class="col-form-label col-sm-2 pt-0">Car Type</label>
                <div class="col-sm-10">
                  <div class="form-check">
                    <input class="form-check-input" type="radio" id="gridRadios1" name="model" value="auto" checked <%
                      if(single.model.includes('auto')) { %> checked <% } %>>
                      <label class="form-check-label" for="gridRadios1">
                        Auto
                      </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" id="gridRadios2" name="model" value="manual" <%
                      if(single.model.includes('manual')) { %> checked <% } %>>
                      <label class="form-check-label" for="gridRadios2">
                        Manual
                      </label>
                  </div>
                </div>
              </div>
            </fieldset>

            <div class="form-row col-md-7 mb-4">
              <label for="image" class="form-label">Car Image</label>
              <input class="form-control" type="file" id="image" name="image">
            </div>

            <button type="submit" class="btn btn-primary">Update Car Details</button>

          </div>

          <div class="col-md-6">

            <div class="form-group col-md-8 mb-5">
              <label for="description">Description</label>
              <textarea class="form-control" id="description" rows="4"
                name="description"><%= single.description %></textarea>
            </div>

            <div class="form-group col-md-3">
              <img src="/<%= single.image %>" name="image" width="270" height="170" />
            </div>

          </div>
        </div>

      </form>
    </div>
  </div>

  <%- include('footer') %>