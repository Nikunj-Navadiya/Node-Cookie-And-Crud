<%- include('header') %>

  <!-- ============================================================== -->
  <!-- Page wrapper  -->
  <!-- ============================================================== -->
  <div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb" style="background-color: rgb(190, 181, 181); padding: 13px;">
      <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
          <h2 class="page-title" style="font-family: 'Courier New', Courier, monospace;">Car Details List</h2>
          <div class="ms-auto text-end">
            <nav aria-label="breadcrumb">
              <div class="btn btn-primary">
                <a href="/crud/add" style="color: rgb(253, 252, 252);">Add New Record</a>
              </div>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
      <!-- ============================================================== -->
      <!-- Start Page Content -->
      <!-- ============================================================== -->
      <table class="table table-striped table-bordered text-center align-middle">
        <!-- "align-middle" is a Bootstrap class that vertically aligns table content -->
        <thead>
          <tr>
            <th><strong>Name</strong></th>
            <th><strong>Description</strong></th>
            <th><strong>Car Type</strong></th>
            <th><strong>Price</strong></th>
            <th><strong>Image</strong></th>
            <th><strong>Actions</strong></th>
          </tr>
        </thead>
        <tbody>
          <% users.map((val, index)=> { %>
            <tr>
              <td style="width:20%; vertical-align: middle;"><strong>
                  <%= val.name %>
                </strong></td>
              <td style="width:23%; vertical-align: middle;">
                <%= val.description %>
              </td>
              <td style="width:10%; vertical-align: middle;">
                <%= val.model %>
              </td>
              <td style="width:10%; vertical-align: middle;">
                <%= val.price %>
              </td>
              <td style="width:20%; vertical-align: middle;">
                <img src="<%= val.image %>" class="card-img-top" style= "width: 170px; height: 100px; object-fit: contain;">
              </td>
              <td style="width:16%; vertical-align: middle;">
                <a href="/crud/editRecord?id=<%= val.id %>" class="btn btn-primary">Edit</a>
                <a href="/crud/deleteRecord?id=<%= val.id %>" class="btn btn-danger">Delete</a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
      <!-- ============================================================== -->
      <!-- End Page Content -->
      <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
  </div>


  <%- include('footer') %>